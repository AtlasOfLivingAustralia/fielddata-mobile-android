<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:key="serverHostName"
        android:summary="The host name of the server running the field data software."
        android:title="Server Host Name" 
        android:defaultValue="root.ala.org.au"/>
    	
    <EditTextPreference
        android:key="contextName"
        android:summary="The context name of the field data instance."
        android:title="Context Name"
        android:defaultValue="fielddata-proxy" />
    <EditTextPreference
        android:key="path"
        android:summary="The field data path."
        android:title="Path" />
    <EditTextPreference
        android:key="portalName"
        android:summary="The field data portal name."
        android:title="Portal Name" />

</PreferenceScreen>